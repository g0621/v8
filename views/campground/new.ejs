<% include ../palets/header%>
<h1 class="jumbotron" style="text-align: center">Create a New Camp-Ground</h1>
<div class="container">
    <div class="row" style="margin: 0 auto; width: 30%">
<form action="/campground" method="post">
    <input class="form-control" type="text" name="cmp[name]" placeholder="newground">
    <input class="form-control" type="number" name="cmp[year]" placeholder="year">
    <input class="form-control" type="text" name="cmp[image]" placeholder="image-URL">
    <textarea class="form-control" placeholder="Discripction" name="cmp[disc]"></textarea>
    <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
</form>
<a href="/campground">GO BACK</a>
    </div>
</div>
