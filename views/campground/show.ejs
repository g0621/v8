<% include ../palets/header%>
<div class="container">
    <div class="row">
        <div class="col-md-3">
            <p class="lead">Yelp Camp</p>
            <div class="list-group">
                <li class="list-group-item active">Info 1</li>
                <li class="list-group-item">Info 2</li>
                <li class="list-group-item">Info 3</li>
            </div>
        </div>
        <div class="col-md-9">
            <div style="padding: 0px" class="thumbnail">
                <h2>Estb. <%= camp.year %></h2><hr>
                <img style="width: 100%;height: 60%" class="img-responsive" src="<%= camp.image %>">
                <h4 style="color: #4e4e4e;margin: 10px auto"><em>By <%= camp.author.username %></em></h4>
                <div class="caption-full">
                    <h4 class="pull-right">50 rupa/night</h4>
                    <h4><a><strong><%=camp.name %></strong></a></h4><hr>
                    <p style="padding: 10px"><%= camp.disc %></p>
                </div>
            </div>
            <div class="well">
                <div class="text-right">
                     <a class="btn btn-success" href="/campground/<%= camp._id %>/comment/new">New comment</a>
                </div>
                <hr>
                <% camp.comment.forEach(function(co){ %>
                <div class="row">
                    <div class="col-mid-12">
                        <strong><%= co.author.username %></strong>
                        <span class="pull-right">10 days ago</span>
                    </div>
                    <p>
                        <%= co.text %>
                    </p>
                </div>
                <%  })%>
            </div><p style="text-align: center">
            <a style="margin-top: 10px" class="btn btn-primary" href="/campground">Go Back</a>
            </p>
        </div>
    </div>
</div>



<% include ../palets/footer.ejs%>