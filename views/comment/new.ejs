<% include ../palets/header%>
<h1 class="jumbotron" style="text-align: center">Add new Comment on <%= campgrnd.name %></h1>
<div class="container">
    <div class="row" style="margin: 0 auto; width: 30%">
        <form action="/campground/<%= campgrnd._id %>/comment" method="post">
            <input class="form-control" type="text" name="comment[author]" placeholder="Author" value="<%= cuser.username %>">
            <textarea class="form-control" name="comment[text]" placeholder="comment here"></textarea>
            <button class="btn btn-primary btn-lg btn-block" type="submit">Submit</button>
        </form>
        <a href="/campground/<%= campgrnd._id %>">GO BACK</a>
    </div>
</div>
<% include ../palets/footer%>